<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.ray.passwordmanager.ui.widget.InputIconLayout
            android:id="@+id/username_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/ic_account_circle_black_24dp">

            <EditText
                android:id="@+id/username_input_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/username"
                android:paddingRight="10dp"
                android:singleLine="true" />
        </com.ray.passwordmanager.ui.widget.InputIconLayout>

        <com.ray.passwordmanager.ui.widget.InputIconLayout
            android:id="@+id/password_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/ic_lock_black_24dp">

            <EditText
                android:id="@+id/password_input_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingRight="10dp"
                android:singleLine="true" />
        </com.ray.passwordmanager.ui.widget.InputIconLayout>

        <com.ray.passwordmanager.ui.widget.InputIconLayout
            android:id="@+id/category_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/ic_group_work_black_24dp">

            <EditText
                android:id="@+id/category_input_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/category"
                android:paddingRight="10dp"
                android:singleLine="true" />
        </com.ray.passwordmanager.ui.widget.InputIconLayout>
    </LinearLayout>
</ScrollView>